<Window x:Class="WPF_EquipmentMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_EquipmentMonitor.Models"
        xmlns:vm="clr-namespace:WPF_EquipmentMonitor.ViewModels"
        xmlns:helpers="clr-namespace:WPF_EquipmentMonitor.Helpers"
        mc:Ignorable="d"
        Title="Мониторинг оборудования" Height="700" Width="900">

    <Window.Resources>
        <helpers:EnumDisplayNameConverter x:Key="EnumDisplayNameConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>


    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- Left panel -->
        <DockPanel Grid.Column="0" Margin="5" LastChildFill="True">

            <!-- Панель поиска -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
                <TextBox Width="350" Margin="0,0,8,0" VerticalAlignment="Center"
                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                <ComboBox Width="150" VerticalAlignment="Center"
                    IsEditable="False" 
                    SelectedItem="{Binding StatusFilter, Mode=TwoWay}" Margin="0,4">
                    <ComboBox.ItemsSource>
                        <x:Array Type="{x:Type local:DeviceStatus}">
                            <local:DeviceStatus>Working</local:DeviceStatus>
                            <local:DeviceStatus>Broken</local:DeviceStatus>
                            <local:DeviceStatus>Decommissioned</local:DeviceStatus>
                        </x:Array>
                    </ComboBox.ItemsSource>
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource EnumDisplayNameConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <!-- Кнопки управления -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="0,8,0,0">
                <Button Content="Добавить" Margin="4" Width="80" Command="{Binding AddDeviceCommand}" Click="AddButton_Click"/>
                <Button Content="Удалить" Margin="4" Width="80" Command="{Binding DeleteDeviceCommand}"/>
                <Button Content="Сброс фильтра" Margin="4" Width="100" Command="{Binding ClearFilterCommand}"/>
            </StackPanel>

            <!-- Список устройств -->
            <ListView ItemsSource="{Binding DevicesView}"
              SelectedItem="{Binding SelectedDevice}"
              DockPanel.Dock="Top"
              Margin="0,0,0,8">
                <ListView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" Margin="8,0,0,0"/>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ListView.GroupStyle>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding Name}" Width="200"/>
                        <GridViewColumn Header="Серийный номер" DisplayMemberBinding="{Binding SerialNumber}" Width="150"/>
                        <GridViewColumn Header="Статус" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Status, Converter={StaticResource EnumDisplayNameConverter}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

        </DockPanel>


        <!-- Right panel: редактирование -->
        <StackPanel Grid.Column="1" Margin="10" DataContext="{Binding EditingDevice}">
            <TextBlock Text="Параметры устройства" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Категория" Width="120"/>
                <TextBox Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Имя" Width="120"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Серийный №" Width="120"/>
                <TextBox Text="{Binding SerialNumber, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Дата установки" Width="120"/>
                <DatePicker SelectedDate="{Binding InstallationDate, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Статус" Width="120"/>
                <ComboBox Width="200" VerticalAlignment="Center"
                  IsEditable="False" SelectedItem="{Binding Status, Mode=TwoWay}" Margin="0,4">
                    <ComboBox.ItemsSource>
                        <x:Array Type="{x:Type local:DeviceStatus}">
                            <local:DeviceStatus>Working</local:DeviceStatus>
                            <local:DeviceStatus>Broken</local:DeviceStatus>
                            <local:DeviceStatus>Decommissioned</local:DeviceStatus>
                        </x:Array>
                    </ComboBox.ItemsSource>
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource EnumDisplayNameConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <!-- Кнопка Сохранить и уведомление -->
            <StackPanel Orientation="Horizontal" Margin="0,16">
                <Button Content="Сохранить" Width="100" Margin="0,0,8,0"
                Command="{Binding DataContext.SaveEditingCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                <TextBlock Text="Сохранено" Foreground="Green"
                   VerticalAlignment="Center"
                   Visibility="{Binding DataContext.IsSaved, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
    
