<Window x:Class="WPF_EquipmentMonitor.Views.AddDeviceWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_EquipmentMonitor.Models"
        xmlns:sys="clr-namespace:System;assembly=mscorlib" 
        xmlns:helpers="clr-namespace:WPF_EquipmentMonitor.Helpers"
        mc:Ignorable="d"
        Title="Добавить устройство" SizeToContent="Height" WindowStartupLocation="CenterOwner" Width="300" MinWidth="250">

    <Window.Resources>
        <helpers:EnumDisplayNameConverter x:Key="EnumDisplayNameConverter"/>
    </Window.Resources>


    <StackPanel Margin="12">
        <TextBlock Text="Категория" Foreground="Gray" Margin="4,0,0,0"/>
        <TextBox Text="{Binding Category}" Margin="0,4"/>

        <TextBlock Text="Имя" Foreground="Gray" Margin="4,0,0,0"/>
        <TextBox Text="{Binding Name}" Margin="0,4"/>

        <TextBlock Text="Серийный номер" Foreground="Gray" Margin="4,0,0,0"/>
        <TextBox Text="{Binding SerialNumber}" Margin="0,4"/>

        <TextBlock Text="Дата установки" Foreground="Gray" Margin="4,0,0,0"/>
        <DatePicker SelectedDate="{Binding InstallationDate}" Margin="0,4"/>

        <TextBlock Text="Статус" Foreground="Gray" Margin="4,0,0,0"/>
        <ComboBox SelectedItem="{Binding Status, Mode=TwoWay}" Margin="0,4" IsEditable="False">
            <ComboBox.ItemsSource>
                <x:Array Type="{x:Type local:DeviceStatus}">
                    <local:DeviceStatus>Working</local:DeviceStatus>
                    <local:DeviceStatus>Broken</local:DeviceStatus>
                    <local:DeviceStatus>Decommissioned</local:DeviceStatus>
                </x:Array>
            </ComboBox.ItemsSource>

            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource EnumDisplayNameConverter}}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>



        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="ОК" Width="70" Margin="4" IsDefault="True" Command="{Binding OkCommand}" />
            <Button Content="Отмена" Width="70" Margin="4" IsCancel="True" Command="{Binding CancelCommand}" />
        </StackPanel>
    </StackPanel>
</Window>
